    print(cantidad)
    break

#ejercicio3

#variables
num1=int(input("ingrese un numero"))
num2=int(input("ingrese un segundo numero"))

menor=min(num1, num2)
mayor=max(num1, num2)

suma=0

#sumar los numeros comprendidos entre los dos valores, exceptuandolos.
for i in range(menor+1, mayor):
    suma += i
print(f"la suma entre {num1} y {num2} excluyendo a estos dos es: {suma}")

#ejercicio4

#definir variables

suma=0

print("ingrese numeros enteros para sumarlos, si desea terminar ingrese 0: ")

#agrego un bucle while para que se sumen los numeros

while True:
    numeros_enteros=int(input("Numero: "))

    if numeros_enteros ==0:
        break
    suma += numeros_enteros
print(f"la suma de los numeros ingresados es: {suma}")

#ejercicio5

import random

numero_adivinar= random.randint(0,9)
intentos=0

while True:
   numero_correcto=int(input("adivina el numero entre el 0 y 9"))
   intentos +=1
   if numero_correcto== numero_adivinar:
       print(f"correcto adivinaste el numero, los intentos fueron: {intentos}")
       break
   else:
       print("incorrecto, vuelva a intentarlo")

