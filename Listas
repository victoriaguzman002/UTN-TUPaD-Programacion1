#EJERCICIO1

#crear una lista que vaya del 1 al 100, mostrando los multiplos de 4
numeros= list(range(4,101,4))
print(f" Los numeros multiplos de 4 del 1 al 100 son: {numeros}")

#EJERCICIO2

#crear una lista de cinco elementos
nombres=["Julia","Nala","Poroto","Thor","Cucu"]

#mostrar el penultimo elemento de la lista
print(f"El penultimo nombre de la lista es: {nombres[-2]}")

#EJERCICIO3

#crear una lista vacia
lista_vacia=[]

#agregar tres palabras a la lista vacia
lista_vacia.append("foto")
lista_vacia.append("lista")
lista_vacia.append("corcho")

print(f"La lista con los tres valores agregados es: {lista_vacia}")

#EJERCICIO4

#definir las variables de los animales
animales=["perro","gato","conejo","pez"]

#reemplazar las variables gato y pez, por loro y oso
animales [1] = "loro"
animales [-1]="oso"

#mostrar las variables intercambiadas
print(animales)

